<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="328dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_rect_white_radius15_dialog">

        <ImageView
            android:id="@+id/iv_cancel_review_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="@string/image_close_dialog"
            android:src="@drawable/ic_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/title_write_review"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/title_review_count"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_write_review" />

        <LinearLayout
            android:id="@+id/rl_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tv_review_count"
            app:layout_constraintTop_toBottomOf="@id/tv_review_count">

            <ImageButton
                android:id="@+id/ib_review_count_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_star_off"
                android:contentDescription="@string/image_review_count" />

            <ImageButton
                android:id="@+id/ib_review_count_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_star_off"
                android:contentDescription="@string/image_review_count" />

            <ImageButton
                android:id="@+id/ib_review_count_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_star_off"
                android:contentDescription="@string/image_review_count" />

            <ImageButton
                android:id="@+id/ib_review_count_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_star_off"
                android:contentDescription="@string/image_review_count" />

            <ImageButton
                android:id="@+id/ib_review_count_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_star_off"
                android:contentDescription="@string/image_review_count" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/content_review"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_review_count" />

        <EditText
            android:id="@+id/et_user_help"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="8dp"
            android:autofillHints="no"
            android:background="@drawable/bg_rect_white_smoke_white_radius15_stroke1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="top"
            android:hint="@string/content_write_campsite_review_hint"
            android:inputType="textMultiLine"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_review_content" />


        <TextView
            android:id="@+id/btn_make_note_help"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_rect_bilbao_radius10"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/content_write_review_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
